<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SoleraJobs" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/skyblue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/skyblue_light</item>
        <item name="colorSecondaryVariant">@color/skyblue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SoleraJobs.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SoleraJobs.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SoleraJobs.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/font_medium</item>
    </style>

    <style name="ProgressLoader" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/progress_background</item>
        <item name="android:indeterminateTint">@color/text_secondary</item>
        <item name="android:outlineProvider">none</item>
        <item name="android:padding">8dp</item>
        <item name="background">@color/transparent</item>
    </style>

    <!--Font-->
    <style name="Font" parent="android:TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_main</item>
        <item name="android:lineSpacingMultiplier">1.4</item>
    </style>

    <style name="Font.Regular" parent="Font">
        <item name="android:fontFamily">@font/font_regular</item>
    </style>

    <style name="Font.Medium" parent="Font">
        <item name="android:fontFamily">@font/font_medium</item>
    </style>

    <style name="Font.Semibold" parent="Font">
        <item name="android:fontFamily">@font/font_semibold</item>
    </style>

    <style name="Font.Bold" parent="Font">
        <item name="android:fontFamily">@font/font_bold</item>
    </style>

    <style name="Font.Light" parent="Font">
        <item name="android:fontFamily">@font/font_light</item>
    </style>

    <style name="Font.Italic" parent="Font">
        <item name="android:fontFamily">@font/font_italic</item>
    </style>
    <!--End Font-->

</resources>