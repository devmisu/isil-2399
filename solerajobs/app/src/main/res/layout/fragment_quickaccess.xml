<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_transparent">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnCreateTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="72dp"
            android:backgroundTint="@color/blue"
            android:src="@drawable/ic_add"
            tools:ignore="ContentDescription"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvCreateTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/btnCreateTask"
            app:layout_constraintEnd_toStartOf="@id/btnCreateTask"
            app:layout_constraintBottom_toBottomOf="@id/btnCreateTask"
            android:layout_marginEnd="16sp"
            android:textAppearance="@style/Font.Medium"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:text="Crear tarea"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcvQuickAccessOptions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toTopOf="@id/btnCreateTask"
            app:layout_constraintEnd_toEndOf="@id/btnCreateTask"
            app:layout_constraintStart_toStartOf="parent"
            tools:itemCount="3"
            tools:listitem="@layout/item_quickaccess" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>