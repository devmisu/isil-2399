<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvQuickAccessTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/btnQuickAccess"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/btnQuickAccess"
            app:layout_constraintEnd_toStartOf="@id/btnQuickAccess"
            android:textAppearance="@style/Font.Medium"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            tools:text="Quick access title"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btnQuickAccess"
            android:layout_width="42dp"
            android:layout_height="42dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/tvQuickAccessTitle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_quickaccess"
            android:foregroundTint="@color/white"
            android:padding="10dp"
            android:background="@drawable/bg_quickaccess"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>