<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="userTask"
            type="pe.solera.entity.UserTask" />
        <import type="pe.solera.solerajobs.ui.UtilKt"/>
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ctrTaskItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/bg_user_task"
        android:clickable="true"
        android:focusable="true"
        android:paddingStart="8dp"
        android:paddingTop="8dp"
        android:paddingEnd="8dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvProyect"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{userTask.projectName}"
            android:textAppearance="@style/Font.Semibold"
            android:textColor="@color/blue_light"
            app:layout_constraintEnd_toStartOf="@id/guidelineVertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Proyecto" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvRequirement"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@{userTask.requirementDescription}"
            android:textAppearance="@style/Font.Semibold"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@id/guidelineVertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvProyect"
            tools:text="Transber Carga Aerea" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvHours"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="@{UtilKt.convertToHoursOfTask(userTask.realHours)}"
            android:textAppearance="@style/Font.Semibold"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@id/guidelineVertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvRequirement"
            tools:text="00 Horas" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineVertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.75" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnLess"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/bg_with_border"
            android:tint="@color/blue"
            android:gravity="center"
            android:textAppearance="@style/Font.Medium"
            android:textSize="24sp"
            android:text="-"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/guidelineVertical"
            app:layout_constraintEnd_toStartOf="@id/btnMore"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnMore"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/bg_with_border"
            android:tint="@color/blue"
            android:gravity="center"
            android:textAppearance="@style/Font.Medium"
            android:textSize="24sp"
            android:text="+"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>