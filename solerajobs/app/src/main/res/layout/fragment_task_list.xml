<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">

        <include
            android:id="@+id/rlyProgress"
            layout="@layout/layout_loader"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/rcvUserTasks"
            app:layout_constraintStart_toStartOf="@id/rcvUserTasks"
            app:layout_constraintEnd_toEndOf="@id/rcvUserTasks"
            app:layout_constraintBottom_toBottomOf="@id/rcvUserTasks"
            android:visibility="visible"
            tools:visibility="gone"/>
        
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvUserName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAppearance="@style/Font.Semibold"
            android:layout_marginTop="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:textSize="20sp"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Ernesto Gaspard" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btnBackDate"
            android:layout_width="36dp"
            android:layout_height="36dp"
            app:layout_constraintTop_toBottomOf="@id/tvUserName"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginStart="24dp"
            android:paddingStart="10dp"
            android:paddingEnd="0dp"
            android:background="@drawable/bg_with_border"
            android:src="@drawable/ic_arrow_left"
            android:tint="@color/blue"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDateSelected"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/btnBackDate"
            app:layout_constraintStart_toEndOf="@id/btnBackDate"
            app:layout_constraintEnd_toStartOf="@id/btnNextDate"
            app:layout_constraintBottom_toBottomOf="@id/btnBackDate"
            android:textAppearance="@style/Font.Semibold"
            android:gravity="center"
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Lunes 22 de Junio"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btnNextDate"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_with_border"
            android:src="@drawable/ic_arrow_right"
            android:tint="@color/blue"
            app:layout_constraintEnd_toStartOf="@id/btnSelectDate"
            app:layout_constraintTop_toTopOf="@+id/btnBackDate" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btnSelectDate"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/bg_with_border"
            android:src="@drawable/ic_calendar"
            android:tint="@color/blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btnBackDate" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcvUserTasks"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/btnBackDate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tvTotalHoursOfDay"
            android:paddingTop="8dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:itemCount="3"
            tools:listitem="@layout/item_user_task"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTotalHoursOfDay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textAppearance="@style/Font.Semibold"
            android:textSize="14sp"
            android:background="@color/total_hours_background"
            android:textColor="@color/text_main"
            android:paddingTop="6dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingBottom="6dp"
            tools:text="Trabajado: 8:00 Horas"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnCreateTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/blue"
            android:src="@drawable/ic_add"
            tools:ignore="ContentDescription" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>